{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "__test__/controllers/ProductController.test.ts",
    "__test__/interactors/ProductInteractor.test.ts"
  ],
  "exclude": ["**/*.test.ts"]
}
